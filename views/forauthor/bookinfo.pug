
div.w3-example
	h1 書籍資料
	div.w3-padding.w3-white.notranslate

		form.form-horizontal(action="/author/editbook" method="post")
			input.form-control(type="hidden" name="bookid"  value=book._id)
			div.form-group
				label.control-label.col-sm-2 文章:
				div.col-sm-10
					label.control-label.col-sm-2.inline 共#{book.articles.length}篇文章, 
					label.control-label.inline #{wc}字

			div.form-group
				label.control-label.col-sm-2 書名:
				div.col-sm-10
					input.form-control(type="text" name="name" required="required" value=book.name disabled)
			div.form-group
				label.control-label.col-sm-2 類型:
				div.col-sm-10
					select(name="category")
						- for (var i=0; i< cats.length; i++){
							option(value= i selected= (book && (book.category===i)) ? true : false)= cats[i]
						- }
					// input.form-control(type="text" name="category" required="required")
			div.form-group
				label.control-label.col-sm-2 簡介:
				div.col-sm-10
					textarea#description.form-control(rows="5" name="description" required="required") #{book.des}
			div.form-group
				div.col-sm-offset-2.col-sm-10
					button.btn.btn-default(type="submit") 作品修改
					label.pull-right 字
					span#span_wordcount.pull-right #{deswords}
					label.pull-right 共
	h1
							
		
